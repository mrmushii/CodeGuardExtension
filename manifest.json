{
  "manifest_version": 3,
  "name": "Code-Guard Proctor",
  "version": "1.1",
  "description": "Monitors and reports student browsing activity during Code-Guard exams.",

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3000/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "https://code-guard-client-side.vercel.app/*"
      ],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_title": "Code-Guard Proctor is active."
  }
}